root = true

[*]
insert_final_newline = true
indent_style = tab
indent_size = 4
trim_trailing_whitespace = true
end_of_line = lf

[*.md]
# Double trailing spaces can be used for BR tags, and other instances are enforced by Markdownlint
trim_trailing_whitespace = false

[*.{yml,yaml}]
indent_style = space
indent_size = 2
